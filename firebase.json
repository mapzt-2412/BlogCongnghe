{
  "hosting": {
    "appAssociation": "AUTO",
    "public": "public",

    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "redirects": [{
      "source": "/firebase/**",
      "destination": "https://www.firebase.com",
      "type": 302
    } ],

    "rewrites": [
      {
        "source": "**",
        "function": "nextServer"
      },{
      "source": "/**",
      "dynamicLinks": true
    } ,
    {
      "source": "/sitemap.xml",
      "function": "buildSitemap"
    },
    {
      "source": "!/sitemap.xml",
      "function": "preRender"
    }
  ],
    "headers": [ {
      "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
      "headers": [ {
        "key": "Access-Control-Allow-Origin",
        "value": "*"
      } ]
    }, {
      "source": "**/*.@(jpg|jpeg|gif|png)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=7200"
      } ]
    }, {
      "source": "404.html",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=300"
      } ]
    } ]
  },
  "functions": {
    "source": ".",
    "runtime": "nodejs4",
    "ignore": [
      "**/src/**",
      "**/.vscode/**",
      ".firebase/**",
      ".firebaserc",
      "firebase.json",
      "**/node_modules/**",
      "**/public/**",
      "**/.next/cache/**"
    ]
  }

}